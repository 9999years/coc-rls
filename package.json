{
    "name": "Rust",
    "displayName": "Rust",
    "description": "Rust support. A client for the Rust Language Server",
    "version": "0.1.0",
    "publisher": "rust-lang",
    "engines": {
        "vscode": "^1.8.0"
    },
    "license": "(MIT OR Apache-2.0)",
    "repository": {
        "type": "git",
        "url": "https://github.com/rust-lang-nursery/rls-vscode"
    },
    "bugs": {
        "url": "https://github.com/rust-lang-nursery/rls-vscode/issues"
    },
    "categories": [
        "Languages",
        "Linters",
        "Snippets",
        "Formatters",
        "Other"
    ],
    "keywords": [
        "rust",
        "rust-lang",
        "rls"
    ],
    "preview": true,
    "activationEvents": [
        "onLanguage:rust"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode-languageclient": "^3.3.0"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.1.0",
        "mocha": "^2.3.3",
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40"
    },
    "contributes": {
        "languages": [
            {
                "id": "rust",
                "extensions": [ ".rs" ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "rust",
                "path": "./snippets/rust.json"
            }
        ],
        "commands": [{
            "command": "rls.deglob",
            "title": "Deglob imports"
        }]
    }
}
